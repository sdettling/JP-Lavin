!!! 5
%html
  %head
    %meta{content: "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    = yield :metas
    %title JP Lavin - Animator
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"

    %noscript
      .noscriptmsg
        Your browser currently has JavaScript disabled. This site doesn't work without it so please enable JavaScript in your browser's settings, then
        = succeed "." do
          = link_to "click here", "#{request.url}"

    = csrf_meta_tag
    :javascript
      var _gaq = _gaq || [];
        _gaq.push(['_setAccount', UA-35443534-1']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script');
          ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  %body
    = content_for?(:content) ? yield(:content) : yield